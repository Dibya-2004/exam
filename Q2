#include <stdio.h>
#include <unistd.h>
#include <ctype.h>
#include <string.h>

int main()
{
    FILE *fp;
    char str[100];
    int v = 0, c = 0, i;

    /* PARENT PROCESS WORK (FIRST) */
    fp = fopen("data.txt", "w");
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    fputs(str, fp);
    fclose(fp);

    /* CREATE CHILD AFTER PARENT FINISHES */
    if(fork() == 0)   // CHILD PROCESS
    {
        fp = fopen("data.txt", "r");
        fgets(str, sizeof(str), fp);

        for(i = 0; str[i] != '\0'; i++)
        {
            char ch = tolower(str[i]);
            if(isalpha(ch))
            {
                if(ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u')
                    v++;
                else
                    c++;
            }
        }

        fclose(fp);

        printf("Vowels: %d\n", v);
        printf("Consonants: %d\n", c);
    }

    return 0;
}
