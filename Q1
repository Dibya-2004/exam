#include <stdio.h>

void analyze(int *m, int n)
{
    int i;
    printf("\nStudent\tMarks\tCategory\n");
    for(i = 0; i < n; i++)
    {
        printf("%d\t%d\t", i+1, m[i]);
        if(m[i] < 35)
            printf("Fail");
        else if(m[i] <= 69)
            printf("Pass");
        else if(m[i] <= 84)
            printf("Merit");
        else
            printf("Distinction");
        printf("\n");
    }
}

int main()
{
    FILE *fp;
    int marks[100], n = 0, i;

    fp = fopen("marks.txt", "r");
    if(fp == NULL)
    {
        printf("File not found\n");
        return 1;
    }

    while(fscanf(fp, "%d", &marks[n]) != EOF)
        n++;

    fclose(fp);

    analyze(marks, n);
    return 0;
}
